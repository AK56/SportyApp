<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <% if member.avatar.attached? %>
          <td><%= image_tag member.avatar, size: "50" %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><strong><%= h member.first_name %></strong></td>
        <td><strong><%= h member.last_name %></strong></td>
        <td><%= link_to 'Show', member, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_member_path(member), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
